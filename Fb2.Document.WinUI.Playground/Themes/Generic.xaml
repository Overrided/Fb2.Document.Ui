<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:rtv="using:RichTextView"
    xmlns:local="using:Fb2.Document.WinUI.Playground.Controls">

	<Style TargetType="local:TitleInfoBaseRenderer">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:TitleInfoBaseRenderer">
					<Border
					    DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">

						<rtv:RichTextView ShowProgress="False"
										  ShowLoading="True"
										  RichTextContent="{Binding ViewModel.TitleInfoContent, Mode=OneWay}">
						</rtv:RichTextView>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
